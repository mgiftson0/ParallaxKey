{
  "name": "vaultguard",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run tailwind && node build.js",
    "dev": "concurrently \"node build.js --watch\" \"npm run watch:tailwind\"",
    "watch:tailwind": "tailwindcss -i ./src/styles/input.css -o ./dist/styles/output.css --watch",
    "tailwind": "tailwindcss -i ./src/styles/input.css -o ./dist/styles/output.css"
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "typescript": "^5.3.3",
    "tailwindcss": "^3.4.1",
    "concurrently": "^8.2.2",
    "@types/chrome": "^0.0.260",
    "@types/node": "^20.11.19"
  }
}
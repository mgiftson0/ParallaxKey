{
  "name": "vaultguard",
  "version": "1.0.0",
  "description": "Protect Your Secrets, Guard Your Vault - Browser-based security scanner",
  "scripts": {
    "prebuild": "npm run build:css",
    "build": "webpack --mode production",
    "build:css": "node scripts/build-css.js && tailwindcss -i ./src/styles/tailwind.css -o ./src/styles/output.css --minify",
    "dev": "npm run build:css && concurrently \"npm run watch:css\" \"webpack --mode development --watch\"",
    "watch:css": "tailwindcss -i ./src/styles/tailwind.css -o ./src/styles/output.css --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist",
    "package": "npm run clean && npm run build && node scripts/package.js",
    "postinstall": "node scripts/setup.js"
  },
  "keywords": ["security", "scanner", "chrome-extension"],
  "author": "VaultGuard Team",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/node": "^20.10.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.9.0",
    "mini-css-extract-plugin": "^2.7.7",
    "postcss": "^8.4.33",
    "postcss-loader": "^8.0.0",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
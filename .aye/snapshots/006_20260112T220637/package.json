{
  "name": "vaultguard",
  "version": "1.0.0",
  "description": "VaultGuard Security Scanner - Protect Your Secrets",
  "scripts": {
    "cleanup": "node scripts/cleanup-conflicts.js",
    "prebuild": "node scripts/setup.js",
    "build": "npm run build:css && tsc && npm run copy",
    "build:css": "npx tailwindcss -i ./src/styles/input.css -o ./dist/styles/output.css --minify",
    "copy": "node scripts/copy-assets.js",
    "dev": "tsc --watch",
    "clean": "node scripts/clean.js"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "tailwindcss": "^3.4.0"
  }
}